<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MapsActivity">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        tools:openDrawer="end"
        android:layout_height="match_parent"
        >
        <com.google.android.material.navigation.NavigationView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            app:headerLayout="@layout/nav_header_main"
            android:id="@+id/navigation_view"
            app:menu="@menu/activity_main_drawer" />


     <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/search_layout"
                />


        </LinearLayout>
        <TextView
            android:id="@+id/textView"
            android:padding="10dp"

            android:textColor="@color/black"
            android:fontFamily="@font/handlee"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:scrollbars="vertical"
            map:layout_constraintTop_toBottomOf="@id/searchBar"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintEnd_toEndOf="parent"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            map:layout_constraintTop_toBottomOf="@id/selectPlaceText"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            >
            <net.gotev.speech.ui.SpeechProgressView
                android:id="@+id/progress"
                android:layout_width="120dp"
                android:layout_height="120dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toBottomOf="@id/searchBar"
            >
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView1"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adUnitId"/>
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adUnitId"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            map:layout_constraintBottom_toTopOf="@id/ZoomLayout"
            map:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp"
            android:visibility="invisible"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabLinkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:tooltipText="LinkedIn Link"
                android:clickable="true"

                android:onClick="linkLinkedIn"
                android:src="@drawable/linkedin_icon"
                app:borderWidth="0dp"
                app:elevation="0dp"
                android:layout_marginBottom="5dp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                android:focusable="true" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabinstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:tooltipText="Instagram Link"
                android:onClick="linkInstagram"
                android:src="@drawable/instagram_icon"
                app:borderWidth="0dp"
                app:elevation="0dp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent" />

           />
        </LinearLayout>

        <TextView
            android:id="@+id/selectPlaceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select A Place"
            android:padding="10dp"
            android:fontFamily="@font/handlee"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:background="@drawable/round"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="30dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMoreOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:onClick="openOtherOptions"
            android:src="@drawable/add"
            android:tooltipText="Open More Options"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:layout_margin="30dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabShareLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:visibility="invisible"
            android:onClick="shareLocation"
            android:src="@drawable/done"
            android:tooltipText="Share Location"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:layout_margin="30dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabNaviagtion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:onClick="startNavigate"
            android:rotation="90"
            android:src="@drawable/navigation"
            android:tooltipText="Navigate"
            android:visibility="invisible"
            app:borderWidth="0dp"
            app:elevation="0dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCancelLocationShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:visibility="invisible"
            android:onClick="cancelLocationShare"
            android:src="@drawable/close_icon"
            android:tooltipText="Cancel Share Location"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:layout_margin="30dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toStartOf="parent" />
         <LinearLayout
             android:id="@+id/ZoomLayout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_above="@+id/fabMoreOptions"
             android:orientation="vertical"
             android:gravity="center_horizontal"
             android:layout_marginRight="30dp"
             map:layout_constraintBottom_toTopOf="@+id/fabMoreOptions"
             map:layout_constraintEnd_toEndOf="parent"
             android:layout_alignParentEnd="true">
             <Switch
                 android:id="@+id/changeLanguageSwitch"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="10dp"
                 android:trackTint="@color/black"
                 android:thumbTint="@color/black"
                 android:textColor="@color/black"
                 android:checked="false"
                 android:text="off"/>

             <com.google.android.material.floatingactionbutton.FloatingActionButton
                 android:id="@+id/fabMyLocation"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:onClick="moveCameraToMyLocation"
                 app:elevation="0dp"
                 app:borderWidth="0dp"
                 android:tooltipText="Your Current Location"
                 android:layout_marginBottom="5dp"
                 android:clickable="true"
                 android:backgroundTint="@color/white"
                 android:src="@drawable/my_location"
                 />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zoomIn"
            android:layout_marginBottom="5dp"
            app:elevation="0dp"
            android:tooltipText="Zoom In"
            app:borderWidth="0dp"
            android:clickable="true"
            android:backgroundTint="@color/white"
            android:src="@drawable/zoom_in"
            tools:targetApi="lollipop"
            android:focusable="true" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zoomOut"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:tooltipText="Zoom Out Link"
            app:elevation="0dp"
            app:borderWidth="0dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/zoom_out"

            android:focusable="true"
            android:contentDescription="@string/todo" />

         </LinearLayout>

    <TextView
        android:id="@+id/lengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:visibility="invisible"

        android:textAlignment="center"
        android:padding="10dp"
        android:tooltipText="Length"
        android:scrollbars="horizontal"
        android:background="@drawable/circular_background"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintBottom_toTopOf="@+id/areaTextView"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"

        android:layout_marginStart="30dp" />
        <TextView
            android:id="@+id/areaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:visibility="invisible"

            android:tooltipText="Area"
            android:scrollbars="horizontal"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="@drawable/circular_background"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"
            android:layout_marginStart="30dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.drawerlayout.widget.DrawerLayout>
</fragment>