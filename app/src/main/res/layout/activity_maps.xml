<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="20dp"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintTop_toTopOf="parent">

            <include layout="@layout/search_layout"
                />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            map:layout_constraintEnd_toEndOf="parent"
            map:layout_constraintTop_toBottomOf="@id/searchBar"
            >
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adUnitId"/>
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                ads:adUnitId="@string/adUnitId"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/links"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            map:layout_constraintBottom_toTopOf="@id/ZoomLayout"
            map:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="30dp"
            android:visibility="invisible"
            android:orientation="vertical"
            android:gravity="center"
            >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabLinkedin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:tooltipText="LinkedIn Link"
                android:clickable="true"

                android:onClick="linkLinkedIn"
                android:src="@drawable/linkedin_icon"
                app:borderWidth="0dp"
                app:elevation="0dp"
                android:layout_marginBottom="5dp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent"
                android:focusable="true" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabinstagram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:tooltipText="Instagram Link"
                android:onClick="linkInstagram"
                android:src="@drawable/instagram_icon"
                app:borderWidth="0dp"
                app:elevation="0dp"
                map:layout_constraintBottom_toBottomOf="parent"
                map:layout_constraintEnd_toEndOf="parent" />

           />
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabMoreOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:onClick="openOtherOptions"
            android:src="@drawable/add"
            android:tooltipText="Open More Options"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:layout_margin="30dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabShareLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:visibility="invisible"
            android:onClick="shareLocation"
            android:src="@drawable/done"
            android:tooltipText="Share Location"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:layout_margin="30dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintEnd_toEndOf="parent" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabCancelLocationShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:visibility="invisible"
            android:onClick="cancelLocationShare"
            android:src="@drawable/close_icon"
            android:tooltipText="Cancel Share Location"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:layout_margin="30dp"
            map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintStart_toStartOf="parent" />
         <LinearLayout
             android:id="@+id/ZoomLayout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:layout_above="@+id/fabMoreOptions"
             android:orientation="vertical"
             android:gravity="center_horizontal"
             android:layout_marginRight="30dp"
             android:visibility="invisible"
             map:layout_constraintBottom_toTopOf="@+id/fabMoreOptions"
             map:layout_constraintEnd_toEndOf="parent"
             android:layout_alignParentEnd="true">
             <Switch
                 android:id="@+id/changeLanguageSwitch"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginBottom="10dp"
                 android:trackTint="@color/black"
                 android:thumbTint="@color/black"
                 android:textColor="@color/black"
                 android:text="en"/>
             <com.google.android.material.floatingactionbutton.FloatingActionButton
                 android:id="@+id/fabShare"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:onClick="share"
                 android:tooltipText="Share"
                 app:elevation="0dp"
                 app:borderWidth="0dp"
                 android:layout_marginBottom="5dp"
                 android:clickable="true"
                 android:backgroundTint="@color/white"
                 android:src="@drawable/share"
                 />

             <com.google.android.material.floatingactionbutton.FloatingActionButton
                 android:id="@+id/fabMapType"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:onClick="changeMapType"
                 android:tooltipText="Change Map"
                 app:elevation="0dp"
                 app:borderWidth="0dp"
                 android:layout_marginBottom="5dp"
                 android:clickable="true"
                 android:backgroundTint="@color/white"
                 android:src="@drawable/map"
                 />
             <com.google.android.material.floatingactionbutton.FloatingActionButton
                 android:id="@+id/fabMyLocation"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:onClick="moveCameraToMyLocation"
                 app:elevation="0dp"
                 app:borderWidth="0dp"
                 android:tooltipText="Your Current Location"
                 android:layout_marginBottom="5dp"
                 android:clickable="true"
                 android:backgroundTint="@color/white"
                 android:src="@drawable/my_location"
                 />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabZoomIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zoomIn"
            android:layout_marginBottom="5dp"
            app:elevation="0dp"
            android:tooltipText="Zoom In"
            app:borderWidth="0dp"
            android:clickable="true"
            android:backgroundTint="@color/white"
            android:src="@drawable/zoom_in"
            tools:targetApi="lollipop"
            android:focusable="true" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabZoomOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="zoomOut"
            android:layout_marginBottom="5dp"
            android:clickable="true"
            android:tooltipText="Zoom Out Link"
            app:elevation="0dp"
            app:borderWidth="0dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/zoom_out"

            android:focusable="true"
            android:contentDescription="@string/todo" />

         </LinearLayout>

        <LinearLayout
            android:id="@+id/CalculatorLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            map:layout_constraintEnd_toStartOf="@+id/fabMoreOptions"
            map:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
          >

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabDeveloperInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="developerInfo"
                android:tooltipText="Developer Info"
                app:elevation="0dp"
                app:borderWidth="0dp"
                android:clickable="true"
                android:backgroundTint="@color/white"
                android:layout_marginRight="5dp"
                android:src="@drawable/developer_info"

                android:contentDescription="@string/todo"
                android:layout_marginEnd="5dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabDefaultArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="showDefaultArea"
                app:elevation="0dp"
                android:tooltipText="Default Bigha Value"
                app:borderWidth="0dp"
                android:clickable="true"
                android:backgroundTint="@color/white"
                android:layout_marginRight="5dp"
                android:src="@drawable/deafult_area"
                android:contentDescription="TODO"
                android:focusable="true"

                android:layout_marginEnd="5dp" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="refreshMap"
                app:elevation="0dp"
                app:borderWidth="0dp"
                android:tooltipText="Clear All"
                android:clickable="true"
                android:backgroundTint="@color/white"
                android:layout_marginRight="5dp"
                android:src="@drawable/refresh"

                android:focusable="true"
                android:layout_marginEnd="5dp"
                android:contentDescription="TODO" />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabCalculateArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="calculateArea"
                app:elevation="0dp"
                app:borderWidth="0dp"
                android:tooltipText="Calculate Length or Area"
                android:clickable="true"
                android:backgroundTint="@color/white"
                android:layout_marginRight="5dp"
                android:src="@drawable/calculate"
                android:contentDescription="@string/todo"
                android:focusable="true"

                android:layout_marginEnd="5dp" />
        </LinearLayout>
    <TextView
        android:id="@+id/lengthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:visibility="invisible"

        android:textAlignment="center"
        android:padding="10dp"
        android:tooltipText="Length"
        android:scrollbars="horizontal"
        android:background="@drawable/circular_background"
        map:layout_constraintStart_toStartOf="parent"
        map:layout_constraintBottom_toTopOf="@+id/areaTextView"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal"

        android:layout_marginStart="30dp" />
        <TextView
            android:id="@+id/areaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:visibility="invisible"

            android:tooltipText="Area"
            android:scrollbars="horizontal"
            android:textAlignment="center"
            android:padding="10dp"
            android:background="@drawable/circular_background"
            map:layout_constraintStart_toStartOf="parent"
            map:layout_constraintBottom_toTopOf="@id/CalculatorLayout"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:gravity="center_horizontal"

            android:layout_marginStart="30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</fragment>