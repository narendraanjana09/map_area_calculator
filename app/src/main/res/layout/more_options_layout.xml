<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabMapType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="changeMapType"
        android:tooltipText="Change Map"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/map"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fabDefaultArea"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDefaultArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showDefaultArea"
        app:elevation="0dp"
        android:tooltipText="Default Bigha Value"
        app:borderWidth="0dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/deafult_area"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@id/fabMapType"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fabRefresh"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="refreshMap"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:tooltipText="Clear All"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/refresh"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@id/fabDefaultArea"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fabCalculateArea"
        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCalculateArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="calculateArea"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:tooltipText="Calculate Length or Area"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/calculate"
        android:focusable="true"
        app:layout_constraintStart_toEndOf="@id/fabRefresh"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDeveloperInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="developerInfo"
        android:tooltipText="Developer Info"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/developer_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fabMapType"
        app:layout_constraintEnd_toStartOf="@id/fabShare"


        />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="share"
        android:tooltipText="Share"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fabRefresh"
        app:layout_constraintStart_toEndOf="@id/fabDeveloperInfo"
        app:layout_constraintEnd_toStartOf="@id/fabNaviagtion"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNaviagtion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:clickable="false"
        android:onClick="startNavigationProcess"
        android:src="@drawable/navigation"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/add"
        app:layout_constraintStart_toEndOf="@id/fabShare"
        app:layout_constraintTop_toBottomOf="@id/fabRefresh" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:tooltipText="add on map"
        android:src="@drawable/add_box"
        app:borderWidth="0dp"
        android:clickable="false"
        android:onClick="addOnMap"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/fabNaviagtion"
        app:layout_constraintTop_toBottomOf="@id/fabCalculateArea"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>