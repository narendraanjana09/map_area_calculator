<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout
    android:id="@+id/layout_add"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toStartOf="@id/layout_default">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/idAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addOnMap"
        android:tooltipText="add on map"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/fieldandtractor"
        />
    <TextView
        android:layout_alignBottom="@id/idAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/idAdd"
        android:layout_alignEnd="@id/idAdd"
        android:gravity="center"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:text="Farmer"
        />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/layout_add"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layout_refresh"
        >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDefaultArea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showDefaultArea"
        app:elevation="0dp"
        android:tooltipText="Default Bigha Value"
        app:borderWidth="0dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/deafult_area"
        android:focusable="true"
       />
        <TextView
            android:layout_alignBottom="@id/fabDefaultArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/fabDefaultArea"
            android:layout_alignEnd="@id/fabDefaultArea"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="10dp"
            android:text="area_info"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_default"
        app:layout_constraintTop_toTopOf="parent" >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:onClick="refreshMap"
        android:src="@drawable/refresh"
        android:tooltipText="Clear All"
        app:borderWidth="0dp"
        app:elevation="0dp"
       />
        <TextView
            android:layout_alignBottom="@id/fabRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/fabRefresh"
            android:layout_alignEnd="@id/fabRefresh"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="10dp"
            android:text="refresh"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_dev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_add"
        app:layout_constraintEnd_toStartOf="@id/layout_nav"
        >
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabDeveloperInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="developerInfo"
        android:tooltipText="Developer Info"
        app:elevation="0dp"
        app:borderWidth="0dp"
        android:clickable="true"
        android:backgroundTint="@color/white"
        android:src="@drawable/developer_info"
       />
        <TextView
            android:layout_alignBottom="@id/fabDeveloperInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/fabDeveloperInfo"
            android:layout_alignEnd="@id/fabDeveloperInfo"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:text="developer"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_nav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/layout_dev"
        app:layout_constraintEnd_toEndOf="parent">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabNaviagtion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:clickable="false"
        android:onClick="startNavigationProcess"
        android:src="@drawable/navigation"
        app:borderWidth="0dp"
        app:elevation="0dp"
       />
        <TextView
            android:layout_alignBottom="@id/fabNaviagtion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/fabNaviagtion"
            android:layout_alignEnd="@id/fabNaviagtion"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/black"
            android:text="naviagtion"
            />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>